[colors]
background = #151515
background-alt = #303030
foreground = #f5f5f5
foreground-alt = #d0d0d0
primary = #e1a3ee
secondary = #deaf8f
alert = #fb9fb1

[base/bar]
width = 100%
height = 27
background = ${colors.background}
foreground = ${colors.foreground}
fixed-center = true
line-size = 3
line-color = #f00
border-size = 2
border-color = #00000000
padding-left = 0
padding-right = 2
module-margin-left = 1
module-margin-right = 2
font-0 = NovaMono:style=Regular
font-1 = Nova Round:style=Book
font-2 = icomoon:style=Regular
font-3 = Font Awesome 5 Free Solid
font-4 = DejaVu

[bar/right]
inherit = base/bar
monitor =  DisplayPort-0
modules-left = i3
modules-center = date
modules-right = mpd cpu memory

[bar/left]
inherit = base/bar
monitor =  DVI-I-0
modules-left = i3
modules-center = date
modules-right = filesystem

[bar/i3]
inherit = base/bar
monitor = HDMI-A-0
modules-left = i3
modules-center = date
modules-right = pulseaudio eth

tray-position = right
tray-padding = 2
tray-background = ${colors.background-alt}

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-underline = ${colors.secondary}

label-layout = %layout%
label-layout-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
mount-1 = /home
mount-2 = /mnt/windows
mount-3 = /mnt/data
mount-4 = /mnt/external
mount-5 = /mnt/steam
format-mounted = <label-mounted> <bar-used>
bar-used-width = 5
bar-used-fill = █
bar-used-empty = ░
bar-used-indicator = 
bar-used-fill-foreground = #4be3db
bar-used-empty-foreground = #4be3db
label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %total%
label-unmounted = %{F#d22412}%mountpoint%%{F-} 
label-unmounted-foreground = ${colors.foreground-alt}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
pin-workspaces = true
label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

label-focused = %icon%
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.primary}
label-focused-padding = 2
label-focused-font = 3

label-unfocused = %icon%
label-unfocused-padding = 2
label-unfocused-font = 3

label-visible = %icon%
label-visible-background = ${colors.background-alt}
label-visible-underline = ${colors.primary}
label-visible-padding = 2
label-visible-font = 3

label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

strip-wsnumbers = true
ws-icon-0 = 1: Main;
ws-icon-1 = 2: Web;
ws-icon-2 = 3: Dev;
ws-icon-3 = 4: Games;
ws-icon-4 = 5: Misc;
ws-icon-5 = 6: Weeb;
ws-icon-6 = 7;
ws-icon-7 = 8: DL;
ws-icon-8 = 9: Social;
ws-icon-9 = 10: Music;
ws-icon-default = 

[module/mpd]
type = internal/mpd
format-offline = 🎜 mpd is offline
format-online = 🎜 mpd is online
format-playing =  <label-song> %{F#00ff00}<bar-progress>
format-paused =  <label-song> %{F#ffff00}<bar-progress>
format-stopped =  <label-song> %{F#ff0000}<bar-progress>

bar-progress-width = 10
bar-progress-indicator = ▒
bar-progress-fill = █
bar-progress-empty = ░

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 
label-song-maxlen = 50
label-song-ellipsis = true

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = ""
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #f90000
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = ""
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #4bffdc
label = %percentage_used%%

[module/eth]
type = internal/network
interface = enp5s0
interval = 3.0

format-connected-underline = #55aa55
format-connected-prefix = ""
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip% - %local_ip6%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5
date =
date-alt = " %Y-%m-%d"
time = %H:%M
time-alt = %H:%M:%S
format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #0a6cf5
label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume-prefix = 
format-volume-prefix-foreground = ${colors.foreground-alt}
format-volume = <label-volume>
format-volume-underline = #42f492
label-volume = %percentage%%
label-volume-foreground = ${root.foreground}

label-muted = 
label-muted-foreground = #666

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

